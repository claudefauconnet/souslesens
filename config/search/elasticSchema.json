{
  "_indexCollections": {
    "ATD": [
      "phototheque",
      "bordereaux",
      "ocr",
      "audiotheque"
    ]
  },
  "_settings": {
    "ATD": {
      "analysis": {
        "filter": {
          "stemmer_filter": {
            "type": "stemmer",
            "language": "french"
          }
        },
        "analyzer": {
          "ATD": {
            "tokenizer": "standard",
            "filter": [
              "lowercase",
              "asciifolding",
              "stemmer_filter"
            ]
          }
        }
      }
    }
  ,

    "SYNONYMS_FR": {
      "analysis": {
        "filter": {
          "synonyms_fr_filter": {
            "type": "synonym",
            "synonyms_path": "synonyms/wordNetSyns.txt"
          },
          "stemmer_filter": {
            "type": "stemmer",
            "language": "french"
          }
        },
        "analyzer": {
          "SYNONYMS": {
            "tokenizer": "standard",
            "filter": [
              "lowercase",
              "asciifolding",
              "stemmer_filter"
            ]
          }
        }
      }
    }
  },




  "_indexes": {
    "web_page": {
      "mappings": {
        "web_page": {
          "properties": {
            "crawlDate": {
              "type": "date",
              "format": "yyyy-MM-dd"
            },
            "title": {
              "type": "text"
            },
            "url": {
              "type": "text"
            },
            "content": {
              "type": "text",
              "index_options": "offsets",
              "analyzer": "ATD",
              "fielddata": true,
              "fields": {
                "contentKeyWords": {
                  "type": "keyword",
                  "ignore_above": 256
                },
                "sensitive": {
                  "fielddata": true,
                  "type": "text",
                  "analyzer": "whitespace"
                }
              }
            }
          }
        }
      }
    },
